generator client {
  provider = "prisma-client"
  output   = "../generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id     Int    @id @default(autoincrement())
  nome   String
  email  String
  notas  Nota[]   // relação com Nota (1 aluno tem várias notas)
}

model Professor {
  id          Int          @id @default(autoincrement())
  nome        String
  email       String
  notas       Nota[]       // professor tem várias notas
  disciplinas Disciplina[] // professor tem várias disciplinas
}

model Disciplina {
  id           Int       @id @default(autoincrement())
  nome         String
  professor    Professor? @relation(fields: [professorId], references: [id])
  professorId  Int?
  notas        Nota[]    // disciplina tem várias notas
}

model Nota {
  id           Int        @id @default(autoincrement())
  valor        Float
  aluno        Aluno      @relation(fields: [alunoId], references: [id])
  alunoId      Int
  disciplina   Disciplina @relation(fields: [disciplinaId], references: [id])
  disciplinaId Int
  professor    Professor  @relation(fields: [professorId], references: [id])
  professorId  Int
}
